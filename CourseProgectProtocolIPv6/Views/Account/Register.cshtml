@{
}

@model CourseProgectProtocolIPv6.ViewModels.RegisterModel
 
@{
    ViewData["Title"] = "Регистрация";
}
<section class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>@ViewData["Title"]</h2>
      <ol>
        <li><a asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
        <li>@ViewData["Title"]</li>
      </ol>
    </div>

  </div>
</section>
 <div class="container">
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Email">Введите Email</label><br />
                <input type="text" asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" />
            </div>
            <div>
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <br/>
            <div>
                <input type="submit" value="Регистрация" class ="btn btn-primary"/>
            </div>
            <br />
        </div>
    </form>
</div>
