@{
}
@model CourseProgectProtocolIPv6.ViewModels.LoginModel

@{
    ViewData["Title"] = "Вход";
}
<section class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>@ViewData["Title"]</h2>
      <ol>
        <li><a asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
        <li>@ViewData["Title"]</li>
      </ol>
    </div>

  </div>
</section>
<div class="container">
 
    
 
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email">Введите Email</label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" />
            </div>
            <a asp-action="Register" asp-controller="Account">Регистрация</a>
            <br/>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
            <br/>
        </div>
    </form>

    
</div>

