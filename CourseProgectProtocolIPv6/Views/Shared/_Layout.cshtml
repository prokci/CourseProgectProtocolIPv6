<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Заголовок -->
    <title>@ViewData["Title"] - IPv6</title>
    
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link href="~/assets/img/favicon.png" rel="icon">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    
    
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    
    <!-- CSS файлы -->
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    
    
    <link href="~/assets/css/style.css" rel="stylesheet">

</head>
<body>
    
    
    <!-- Заголовок -->
    <header id="header" class="fixed-top header-inner-pages">
        <div class="container d-flex align-items-center justify-content-between">
          <h1 class="logo"><a href="index.html">IPv6</a></h1>
          
          <!-- Разделы сайта -->
          <nav id="navbar" class="navbar">
            <ul>
              <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
              <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="News">Новости</a></li>
              <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Histore">История</a></li>
              <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Theory">Теория</a></li>
              <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Examplys">Примеры</a></li>
              <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Sources">Источики</a></li>
              <li><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="Entrance">Личный кабинет</a></li>
              <li class="col-lg-4 col-md-6 footer-newsletter">
                  <!-- Поиск -->
                  <form asp-controller="Home" asp-action="Find" method="post">
                   <input type="search" name="Find">
                   <input type="submit" value="Поиск">
                 </form>
             </li>
            </ul>
            <i class="bi bi-list mobile-nav-toggle"></i>
          </nav>

        </div>
    </header>

    <!-- Основная часть страницы -->
    <main id="main">
        @RenderBody()
    </main>

    <!-- Подвал -->
    <footer id="footer">

     <div class="footer-top">
       <div class="container">
         <div class="row">
             <!-- Почта и Телефон -->
     
           <div class="col-lg-3 col-md-6 footer-contact">
             <h3>IPv6</h3>
             <p>
               <strong>Телефон:</strong> +375 29 <br>
               <strong>Почта:</strong> prokci.ogent@gmail.com<br>
             </p>
           </div>
           
       </div>
     </div>
     
     <div class="container">
     
       <div class="copyright-wrap d-md-flex py-4">
         <div class="me-md-auto text-center text-md-start">
           <div class="copyright">
             &copy;<strong><span>CUO</span></strong> Все права защищены.
           </div>
           
         </div>
         <!-- Сылки -->
         <div class="social-links text-center text-md-right pt-3 pt-md-0">
           <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
           <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
           <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
           <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
           <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
         </div>
       </div>
     
     </div>
     </div>
   </footer>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <div id="preloader"></div>
    
    <!-- Подключаемые JS фаилы -->
    <script src="~/assets/vendor/purecounter/purecounter.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
    
    
    <script src="~/assets/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
