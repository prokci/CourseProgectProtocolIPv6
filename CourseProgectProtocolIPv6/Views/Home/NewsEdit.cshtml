@{
    ViewData["Title"] = "Изменить статью:"+ViewBag.News[ViewBag.Id][0];
}

<section class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>@ViewData["Title"]</h2>
      <ol>
        <li><a asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
        <li>@ViewData["Title"]</li>
      </ol>
    </div>

  </div>
</section>


<div class="container">

    <form asp-area="" asp-controller="Home" asp-action="NewsSave" asp-route-id = "@ViewBag.IdBase" method="get">
     <div class="form-group">
        <label for="exampleFormControlInput1">Название</label>
        <input type="text" class="form-control" value ="@ViewBag.News[ViewBag.Id][0]" name ="name"/>
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">Текст</label>
        <textarea class="form-control"  rows="50" name = "value">@ViewBag.News[ViewBag.Id][1]</textarea>
      </div>
      <div class="form-group">
          <br/>
          <input type="submit" value="Сохранить" class="btn btn-primary" />
      </div>
    </form>
    <br/>
    <form asp-area="" asp-controller="Home" asp-action="NewsDelete" asp-route-id = "@ViewBag.IdBase">
     <div class="form-group">
         <input type="submit" value="Удалить статью" class="btn btn-primary" />
      </div>
    </form>
    <br />
</div>
