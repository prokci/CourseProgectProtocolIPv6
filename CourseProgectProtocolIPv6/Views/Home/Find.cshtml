@{
    ViewData["Title"] = "Поиск";
}
<section class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>@ViewData["Title"] - "@ViewBag.Find"</h2>
      <ol>
        <li><a asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
      </ol>
    </div>

  </div>
</section>
      

<section id="services" class="services section-bg">
    <div class="container" data-aos="fade-up">
           <div class="section-title">
                <h2>Поиск по заголовкам</h2>
           </div>
        
            <div class="row gy-4">
            @{
                int counter = 0;
            }
                @for (int i =0;i<ViewBag.Index.Count;i++) {
                    { counter += 100;
                    
                    if (counter == 400)
                    { counter = 100; }
                }
                    
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="@counter">
                    <div class="icon-box iconbox-blue">
                        
              
                      <h4><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="NewsOpen"
                          asp-route-Id="@ViewBag.Index[i]" >
                          @(ViewBag.Oll[ViewBag.Index[i]][0].Length <= 61 ? ViewBag.Oll[ViewBag.Index[i]][0] : ViewBag.Oll[ViewBag.Index[i]][0].Substring(0,60))</a></h4>
                      <p>@Html.Raw(ViewBag.Oll[ViewBag.Index[i]][1].Length <= 301 ? ViewBag.Oll[ViewBag.Index[i]][1] : ViewBag.Oll[ViewBag.Index[i]][1].Substring(0,300))</p>
                      <p></p>
                    </div>
                </div>
                }
          </div>
          
 
      
    </div>
</section>

<section id="services" class="services section-bg">
    <div class="container" data-aos="fade-up">
           <div class="section-title">
               <br>
               <h2>Поиск по содержимому</h2>
           </div>
        
            <div class="row gy-4">
            @{
                counter = 0;
            }
                @for (int i =0;i<ViewBag.IndexV.Count;i++) {
                    { counter += 100;
                    
                    if (counter == 400)
                    { counter = 100; }
                }
                    
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="@counter">
                    <div class="icon-box iconbox-blue">
                        
              
                      <h4><a class="nav-link scrollto" asp-area="" asp-controller="Home" asp-action="NewsOpen"
                          asp-route-Id="@ViewBag.IndexV[i]" >
                          @(ViewBag.Oll[ViewBag.IndexV[i]][0].Length <= 61 ? ViewBag.Oll[ViewBag.IndexV[i]][0] : ViewBag.Oll[ViewBag.IndexV[i]][0].Substring(0,60))</a></h4>
                      <p>@Html.Raw(ViewBag.Oll[ViewBag.IndexV[i]][1].Length <= 301 ? ViewBag.Oll[ViewBag.IndexV[i]][1] : ViewBag.Oll[ViewBag.IndexV[i]][1].Substring(0,300))</p>
                      <p></p>
                    </div>
                </div>
                }
                <br>
          </div>
          
 
      
    </div>
</section>
